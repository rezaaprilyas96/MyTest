<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_room"
    android:layout_margin="2dp"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:id="@+id/ll_shammer"
        android:visibility="visible"
        android:orientation="vertical"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_list_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_view_shimmer" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_list_category"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="30dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_view_shimmer" />
        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_resep"
            android:src="@drawable/cnn"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_categori"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:background="@android:color/white"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue"
            android:text="Categori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_idresep"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:text="id resep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.cardview.widget.CardView>